<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragContainer2"
    android:paddingBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_height="150dp"
        app:lottie_fileName="checkmark.json"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_loop="false"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:lottie_autoPlay="true"
        android:id="@+id/lotties_success"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lotties_success"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/feedBcaklowertxt"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="18dp"
        android:textColor="@color/profileColor"
        android:letterSpacing="0.045"
        android:text="Thank you for reporting the bug \n
         we would address it.  "/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="289dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/feedBcaklowertxt"
        android:backgroundTint="@color/customColor"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Exit"

        android:fontFamily="@font/montserrat"
        android:textStyle="bold"
        android:padding = "10dp"
        app:cornerRadius="9dp"
        app:rippleColor="@color/rippleColor"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        android:id="@+id/exitFeedback"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/exitFeedback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/anotherIssuelowertxt"
        android:textStyle="bold"
        android:textSize="13sp"
        android:fontFamily="@font/montserrat"
        android:layout_marginTop="22dp"
        android:textColor="@color/profileColor"
        android:letterSpacing="0.045"
        android:text="@string/report_another_bug"/>

</androidx.constraintlayout.widget.ConstraintLayout>