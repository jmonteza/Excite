<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/exiteLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:src="@drawable/excite_logo"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/roboto"
        android:text="Welcome"
        android:id="@+id/sgnUp"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exiteLogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sgnUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="The Excite Community"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        android:id="@+id/jointxt"
        android:fontFamily="@font/roboto"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="302dp"
        android:layout_height="67dp"
        android:id="@+id/log_in_redirect_btn"
        app:layout_constraintTop_toBottomOf="@+id/jointxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/customColor"
        app:rippleColor="@color/rippleColor"
        android:layout_marginTop="13dp"
        android:text = "Login"
        android:fontFamily="@font/roboto_bold"
        app:cornerRadius = "14dp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="302dp"
        android:layout_height="67dp"
        app:layout_constraintTop_toBottomOf="@+id/log_in_redirect_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:cornerRadius="14dp"
        android:text = "Sign Up With Email"
        app:rippleColor="@color/rippleColor"
        android:textColor="@color/customColor"
        app:strokeWidth="2dp"
        app:strokeColor="@color/cstmstroke"
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/sign_up_redirect2_btn"
        style = "@style/Widget.MaterialComponents.Button.OutlinedButton"/>









</androidx.constraintlayout.widget.ConstraintLayout>