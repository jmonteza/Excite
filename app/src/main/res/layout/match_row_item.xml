<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="462dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:layout_marginLeft="21dp"
    android:layout_marginRight="18dp"
    android:layout_marginTop="20dp"

    android:layout_marginBottom="10dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:id="@+id/matches_Cardview"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:id="@+id/cardlay"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/icon"
            android:layout_width="fill_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"

            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src = "@drawable/femam2"/>

        <ImageView
            android:id="@+id/btm_rect"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/bottom_rect"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/cardlay"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alexa"
            android:id="@+id/usrCardname"
            app:layout_constraintLeft_toLeftOf="@id/btm_rect"
            app:layout_constraintTop_toTopOf="@id/btm_rect"
            app:layout_constraintBottom_toBottomOf="@id/btm_rect"
            app:layout_constraintRight_toRightOf="@id/btm_rect"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/online_btn"
            android:id="@+id/online_btn"
            app:layout_constraintBottom_toBottomOf="@id/btm_rect"
            app:layout_constraintHorizontal_bias="0.581"
            app:layout_constraintLeft_toLeftOf="@id/btm_rect"
            app:layout_constraintRight_toRightOf="@id/btm_rect"
            app:layout_constraintTop_toTopOf="@id/btm_rect"
            app:layout_constraintVertical_bias="0.525" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">




            <ImageButton
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/roundcorners"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/acceptemoji"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageButton
                android:id="@+id/btn_reject"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:background="@drawable/roundcorners"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/emojireject" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>