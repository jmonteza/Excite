<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/exiteLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:src="@drawable/excite_logo"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/roboto"
        android:text="Sign up"
        android:id="@+id/sgnUp"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exiteLogo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sgnUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Join the Excite Community"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        android:id="@+id/jointxt"
        android:fontFamily="@font/roboto"
        />
    
    <com.google.android.material.button.MaterialButton
        android:layout_width="302dp"
        android:layout_height="67dp"
        android:id="@+id/sgnupPhoneNm"
        app:layout_constraintTop_toBottomOf="@+id/jointxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/customColor"
        app:rippleColor="@color/rippleColor"
        android:layout_marginTop="13dp"
        android:text = "Use Phone Number"
        android:fontFamily="@font/roboto_bold"
        app:cornerRadius = "14dp"
    />

    <com.google.android.material.button.MaterialButton
        android:layout_width="302dp"
        android:layout_height="67dp"
        app:layout_constraintTop_toBottomOf="@+id/sgnupPhoneNm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:cornerRadius="14dp"
        android:text = "Use Phone Number"
        app:rippleColor="@color/rippleColor"
        android:textColor="@color/customColor"
        app:strokeWidth="2dp"
        app:strokeColor="@color/cstmstroke"
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/phnnumMethod"
        style = "@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phnnumMethod"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="or sign up with"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/roboto"
        android:id="@+id/sgnuptxt"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="60dp"
        android:layout_height="58dp"
        app:layout_constraintTop_toBottomOf="@id/sgnuptxt"
        style = "@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintLeft_toLeftOf="@id/phnnumMethod"
        app:icon="@drawable/facebook_mask_signup"
        app:iconGravity="textStart"
        app:rippleColor="@color/rippleColor"
        app:strokeColor="@color/cstmstroke"
        android:layout_marginTop="20dp"
        android:id="@+id/fcbkLogobtn"
        app:iconTint="@color/customColor"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="60dp"
        android:layout_height="58dp"
        app:layout_constraintTop_toBottomOf="@id/sgnuptxt"
        style = "@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintLeft_toRightOf="@id/fcbkLogobtn"
        app:icon="@drawable/google_mask_signup"
        android:layout_marginLeft="60dp"
        app:rippleColor="@color/rippleColor"
        app:iconGravity="textStart"
        android:layout_marginTop="20dp"
        app:strokeColor="@color/cstmstroke"
        android:id="@+id/googleLogobtn"
        app:iconTint="@color/customColor"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="60dp"
        android:layout_height="58dp"
        app:layout_constraintTop_toBottomOf="@id/sgnuptxt"
        style = "@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintLeft_toRightOf="@id/googleLogobtn"
        app:icon="@drawable/twitter_mask_signup"
        app:rippleColor="@color/rippleColor"
        app:strokeColor="@color/cstmstroke"
        android:layout_marginLeft="60dp"
        app:iconGravity="textStart"
        android:layout_marginTop="20dp"

        android:id="@+id/twitterLogobtn"
        app:iconTint="@color/customColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fcbkLogobtn"
        android:layout_marginTop="80dp"
        android:text="Terms of use"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:id="@+id/terms_of_use"
        app:layout_constraintLeft_toLeftOf="@id/fcbkLogobtn"
        android:textColor="@color/customColor"
        android:layout_marginLeft="53dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fcbkLogobtn"
        android:layout_marginTop="80dp"
        android:text="Privacy Policy"
        android:fontFamily="@font/roboto"
        android:textSize="14sp"
        android:id="@+id/Privacy_Policy"
        app:layout_constraintLeft_toRightOf="@id/terms_of_use"
        android:textColor="@color/customColor"
        android:layout_marginLeft="33dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>