        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/customColor</item>
        <item name="colorPrimaryVariant">@color/customColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/customColor</item>
